<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="malbreitenbach.autogarden.Application.Tab1_main">

    <Button
        android:text="Connect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/but_connect"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <ProgressBar
        style="@android:style/Widget.Material.Light.ProgressBar.Horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/prog_bt"
        android:layout_alignBottom="@+id/but_connect"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/but_connect" />

    <TextView
        android:text="Not connected"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txt_status"
        android:layout_above="@+id/prog_bt"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/but_connect" />

    <Button
        android:text="Send Byte"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/but_send"
        android:layout_marginTop="48dp"
        android:layout_below="@+id/prog_bt"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Update"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/but_up"
        android:layout_marginTop="16dp"
        android:layout_below="@+id/but_send"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />
</RelativeLayout>
